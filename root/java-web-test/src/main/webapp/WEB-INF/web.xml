<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/j2ee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
    <context-param>                
        <param-name>webAppRootKey</param-name>               
        <param-value>test.java.web.root</param-value>            
    </context-param>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
  <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>    
 
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/app-web-beans.xml</param-value>
    </context-param>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/classes/log4j.properties</param-value>
    </context-param>

    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <display-name>CharacterEncodingFilter</display-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/home/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/hr/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/candidate/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/hunter/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/character/*</url-pattern>
    </filter-mapping>
	    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/manage/*</url-pattern>
    </filter-mapping>
            <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/competencyModel/*</url-pattern>
    </filter-mapping>
            <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/center/*</url-pattern>
    </filter-mapping>
                <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/wx/*</url-pattern>
    </filter-mapping>
                <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/backgroundInvestigate/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/franchisee/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>51lietouwebmvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/app-web-beans.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>51lietouwebmvc</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>   
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/web/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/web/50x.jsp</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
        <location>/WEB-INF/jsp/web/50x.jsp</location>
    </error-page>
</web-app>    